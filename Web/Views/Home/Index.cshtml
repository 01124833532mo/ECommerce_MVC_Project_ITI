@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<section class="hero-section text-center text-white rounded-4 p-5 mb-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <div class="py-5">
        <h1 class="display-3 fw-bold mb-3">Welcome to ShopITI</h1>
        <p class="lead mb-4 mx-auto" style="max-width: 600px;">Discover amazing products at unbeatable prices. Quality you can trust, delivered right to your door.</p>
        <a class="btn btn-light btn-lg px-5 rounded-pill shadow" asp-controller="Catalog" asp-action="Index">
            <i class="bi bi-bag me-2"></i>Shop Now
        </a>
    </div>
</section>

<!-- Features Section -->
<section class="mb-5">
    <div class="row g-4 text-center">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100 card-hover">
                <div class="card-body p-4">
                    <div class="rounded-circle bg-primary bg-opacity-10 d-inline-flex p-3 mb-3">
                        <i class="bi bi-truck fs-2 text-primary"></i>
                    </div>
                    <h5 class="fw-bold">Free Shipping</h5>
                    <p class="text-muted mb-0">Free shipping on all orders over $50. Fast and reliable delivery.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100 card-hover">
                <div class="card-body p-4">
                    <div class="rounded-circle bg-success bg-opacity-10 d-inline-flex p-3 mb-3">
                        <i class="bi bi-shield-check fs-2 text-success"></i>
                    </div>
                    <h5 class="fw-bold">Secure Payment</h5>
                    <p class="text-muted mb-0">Your payment information is safe with our secure checkout process.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100 card-hover">
                <div class="card-body p-4">
                    <div class="rounded-circle bg-warning bg-opacity-10 d-inline-flex p-3 mb-3">
                        <i class="bi bi-headset fs-2 text-warning"></i>
                    </div>
                    <h5 class="fw-bold">24/7 Support</h5>
                    <p class="text-muted mb-0">Our support team is here to help you anytime, day or night.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="bg-light rounded-4 p-5 text-center">
    <h3 class="fw-bold mb-3">Ready to explore?</h3>
    <p class="text-muted mb-4">Browse our catalog and find exactly what you're looking for.</p>
    <a class="btn btn-primary btn-lg rounded-pill px-5" asp-controller="Catalog" asp-action="Index">
        <i class="bi bi-grid me-2"></i>Browse Catalog
    </a>
</section>
