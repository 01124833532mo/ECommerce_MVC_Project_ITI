@model ProductListVm
@{
    ViewData["Title"] = "Catalog";
    var categories = ViewBag.Categories as IList<CategoryVm> ?? new List<CategoryVm>();
    var totalPages = (int)Math.Ceiling((double)Model.TotalCount / Model.PageSize);
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold mb-1"><i class="bi bi-grid me-2 text-primary"></i>Catalog</h2>
        <p class="text-muted mb-0">@Model.TotalCount product(s) found</p>
    </div>
</div>

<!-- Filters -->
<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <form class="row g-3 align-items-end" method="get">
            <div class="col-md-4">
                <label class="form-label fw-semibold small text-muted"><i class="bi bi-search me-1"></i>Search</label>
                <input type="text" name="q" value="@Model.Search" class="form-control" placeholder="Search products..." />
            </div>
            <div class="col-md-3">
                <label class="form-label fw-semibold small text-muted"><i class="bi bi-tag me-1"></i>Category</label>
                <select name="categoryId" class="form-select">
                    <option value="">All categories</option>
                    @foreach (var cat in categories)
                    {
                        <option value="@cat.CategoryId" selected="@(Model.CategoryId == cat.CategoryId ? "selected" : null)">@cat.Name</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label fw-semibold small text-muted"><i class="bi bi-sort-down me-1"></i>Sort By</label>
                <select name="sort" class="form-select">
                    <option value="">Name A-Z</option>
                    <option value="price" selected="@(Model.Sort == "price" ? "selected" : null)">Price: Low to High</option>
                    <option value="price_desc" selected="@(Model.Sort == "price_desc" ? "selected" : null)">Price: High to Low</option>
                    <option value="newest" selected="@(Model.Sort == "newest" ? "selected" : null)">Newest First</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100"><i class="bi bi-funnel me-1"></i>Filter</button>
            </div>
        </form>
    </div>
</div>

@if (!Model.Items.Any())
{
    <div class="text-center py-5">
        <i class="bi bi-inbox fs-1 text-muted"></i>
        <p class="text-muted mt-3 fs-5">No products found matching your criteria.</p>
        <a class="btn btn-outline-primary" asp-action="Index">Clear Filters</a>
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 row-cols-xl-4 g-4">
        @foreach (var item in Model.Items)
        {
            <div class="col">
                <div class="card border-0 shadow-sm h-100 card-hover">
                    <div class="card-img-top d-flex align-items-center justify-content-center bg-light" style="height: 180px;">
                        <i class="bi bi-image fs-1 text-muted"></i>
                    </div>
                    <div class="card-body d-flex flex-column">
                        <span class="badge bg-primary bg-opacity-10 text-primary align-self-start mb-2">@item.CategoryName</span>
                        <h6 class="card-title fw-bold">@item.Name</h6>
                        <p class="text-muted small mb-2">SKU: @item.SKU</p>
                        <div class="mt-auto">
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="fs-5 fw-bold text-primary">@item.Price.ToString("C")</span>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary rounded-pill">
                                    <i class="bi bi-eye me-1"></i>Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (totalPages > 1)
    {
        <nav class="mt-4 d-flex justify-content-center">
            <ul class="pagination">
                <li class="page-item @(Model.CurrentPage <= 1 ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = Model.CurrentPage - 1, categoryId = Model.CategoryId, q = Model.Search, sort = Model.Sort })">
                        <i class="bi bi-chevron-left"></i>
                    </a>
                </li>
                @for (int pageNumber = 1; pageNumber <= totalPages; pageNumber++)
                {
                    <li class="page-item @(pageNumber == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = pageNumber, categoryId = Model.CategoryId, q = Model.Search, sort = Model.Sort })">@pageNumber</a>
                    </li>
                }
                <li class="page-item @(Model.CurrentPage >= totalPages ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = Model.CurrentPage + 1, categoryId = Model.CategoryId, q = Model.Search, sort = Model.Sort })">
                        <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    }
}
