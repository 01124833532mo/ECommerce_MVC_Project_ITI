@model ProductDetailsVm
@{
    ViewData["Title"] = Model.Name;
}

<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Catalog" asp-action="Index" class="text-decoration-none">Catalog</a></li>
        <li class="breadcrumb-item active">@Model.Name</li>
    </ol>
</nav>

<div class="card border-0 shadow-sm">
    <div class="card-body p-4">
        <div class="row g-4">
            <!-- Product Image Placeholder -->
            <div class="col-md-5">
                <div class="bg-light rounded-3 d-flex align-items-center justify-content-center" style="height: 350px;">
                    <i class="bi bi-image display-1 text-muted"></i>
                </div>
            </div>

            <!-- Product Info -->
            <div class="col-md-7">
                <span class="badge bg-primary bg-opacity-10 text-primary mb-2">@Model.CategoryName</span>
                <h2 class="fw-bold mb-2">@Model.Name</h2>
                <p class="text-muted mb-3">SKU: @Model.SKU</p>

                <div class="fs-2 fw-bold text-primary mb-4">@Model.Price.ToString("C")</div>

                <div class="row g-3 mb-4">
                    <div class="col-auto">
                        <div class="d-flex align-items-center gap-2">
                            <i class="bi bi-box-seam text-muted"></i>
                            <span>Stock: <strong>@Model.StockQuantity</strong></span>
                        </div>
                    </div>
                    <div class="col-auto">
                        <div class="d-flex align-items-center gap-2">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success"><i class="bi bi-check-circle me-1"></i>Available</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary"><i class="bi bi-x-circle me-1"></i>Unavailable</span>
                            }
                        </div>
                    </div>
                    <div class="col-auto">
                        <div class="d-flex align-items-center gap-2">
                            <i class="bi bi-calendar3 text-muted"></i>
                            <span class="text-muted small">Added @Model.CreatedAt.ToLocalTime().ToString("MMM dd, yyyy")</span>
                        </div>
                    </div>
                </div>

                @if (Model.IsActive && Model.StockQuantity > 0)
                {
                    <form asp-controller="Cart" asp-action="Add" method="post" class="d-flex gap-3 align-items-end">
                        <input type="hidden" name="productId" value="@Model.ProductId" />
                        <div>
                            <label class="form-label small fw-semibold text-muted">Quantity</label>
                            <input type="number" min="1" max="@Model.StockQuantity" value="1" name="quantity" class="form-control" style="width: 80px;" />
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg rounded-pill px-5">
                            <i class="bi bi-cart-plus me-2"></i>Add to Cart
                        </button>
                    </form>
                }
            </div>
        </div>
    </div>
</div>
