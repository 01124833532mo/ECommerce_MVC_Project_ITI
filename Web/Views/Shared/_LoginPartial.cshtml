@using Microsoft.AspNetCore.Identity
@using EcommerceIti.Domain.Entities
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<ul class="navbar-nav align-items-center">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle text-white d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown">
            <i class="bi bi-person-circle me-1"></i>@User.Identity?.Name
        </a>
        <ul class="dropdown-menu dropdown-menu-end shadow-sm">
            <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index"><i class="bi bi-person me-2"></i>My Account</a></li>
            <li><a class="dropdown-item" asp-area="" asp-controller="Orders" asp-action="Index"><i class="bi bi-bag me-2"></i>My Orders</a></li>
            <li><a class="dropdown-item" asp-area="" asp-controller="Addresses" asp-action="Index"><i class="bi bi-geo-alt me-2"></i>My Addresses</a></li>
            <li><hr class="dropdown-divider" /></li>
            <li>
                <form class="px-0" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="dropdown-item text-danger"><i class="bi bi-box-arrow-right me-2"></i>Logout</button>
                </form>
            </li>
        </ul>
    </li>
}
else
{
    <li class="nav-item">
        <a class="btn btn-sm btn-light me-2" asp-area="Identity" asp-page="/Account/Login">
            <i class="bi bi-box-arrow-in-right me-1"></i>Login
        </a>
    </li>
    <li class="nav-item">
        <a class="btn btn-sm btn-outline-light" asp-area="Identity" asp-page="/Account/Register">
            <i class="bi bi-person-plus me-1"></i>Register
        </a>
    </li>
}
</ul>
