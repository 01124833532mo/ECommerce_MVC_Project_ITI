<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShopITI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EcommerceIti.Web.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <!-- Top bar -->
    <div class="bg-dark text-white-50 small py-1 d-none d-md-block">
        <div class="container d-flex justify-content-between">
            <span><i class="bi bi-envelope me-1"></i> support@shopiti.com</span>
            <span><i class="bi bi-truck me-1"></i> Free shipping on orders over $50</span>
        </div>
    </div>

    <!-- Main Navbar -->
    <nav class="navbar navbar-expand-lg sticky-top shadow-sm" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
        <div class="container">
            <a class="navbar-brand text-white fw-bold fs-4" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="bi bi-shop me-2"></i>ShopITI
            </a>
            <button class="navbar-toggler border-light" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon" style="filter: invert(1);"></span>
            </button>
            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-house me-1"></i>Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Catalog" asp-action="Index">
                            <i class="bi bi-grid me-1"></i>Catalog
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">
                            <i class="bi bi-shield-check me-1"></i>Privacy
                        </a>
                    </li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-warning fw-semibold" asp-area="Admin" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-gear me-1"></i>Admin
                            </a>
                        </li>
                    }
                </ul>
                <div class="d-flex align-items-center gap-3">
                    <a class="btn btn-outline-light btn-sm position-relative" asp-controller="Cart" asp-action="Index">
                        <i class="bi bi-cart3 me-1"></i>Cart
                    </a>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </div>
    </nav>

    <!-- Main content -->
    <div class="flex-grow-1">
        <div class="container py-4">
            <main role="main">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white pt-5 pb-3 mt-auto">
        <div class="container">
            <div class="row g-4">
                <div class="col-lg-4">
                    <h5 class="fw-bold"><i class="bi bi-shop me-2"></i>ShopITI</h5>
                    <p class="text-white-50">Your one-stop destination for quality products at great prices.</p>
                </div>
                <div class="col-lg-4">
                    <h6 class="fw-bold text-uppercase mb-3">Quick Links</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a class="text-white-50 text-decoration-none" asp-controller="Catalog" asp-action="Index"><i class="bi bi-chevron-right me-1"></i>Catalog</a></li>
                        <li class="mb-2"><a class="text-white-50 text-decoration-none" asp-controller="Orders" asp-action="Index"><i class="bi bi-chevron-right me-1"></i>My Orders</a></li>
                        <li class="mb-2"><a class="text-white-50 text-decoration-none" asp-controller="Home" asp-action="Privacy"><i class="bi bi-chevron-right me-1"></i>Privacy Policy</a></li>
                    </ul>
                </div>
                <div class="col-lg-4">
                    <h6 class="fw-bold text-uppercase mb-3">Connect With Us</h6>
                    <div class="d-flex gap-3 fs-5">
                        <a href="#" class="text-white-50"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="text-white-50"><i class="bi bi-twitter-x"></i></a>
                        <a href="#" class="text-white-50"><i class="bi bi-instagram"></i></a>
                    </div>
                </div>
            </div>
            <hr class="border-secondary mt-4" />
            <div class="text-center text-white-50 small">
                &copy; 2026 ShopITI. All rights reserved.
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
