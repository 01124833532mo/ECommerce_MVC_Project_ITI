@model CheckoutVm
@{
    ViewData["Title"] = "Checkout";
}

<div class="d-flex align-items-center mb-4">
    <h2 class="fw-bold mb-0"><i class="bi bi-lock me-2 text-primary"></i>Checkout</h2>
</div>

@if (!Model.Cart.Items.Any())
{
    <div class="card border-0 shadow-sm">
        <div class="card-body text-center py-5">
            <i class="bi bi-cart-x display-1 text-muted mb-3"></i>
            <h4 class="text-muted">Your cart is empty</h4>
            <a class="btn btn-primary rounded-pill px-5 mt-3" asp-controller="Catalog" asp-action="Index">
                <i class="bi bi-bag me-2"></i>Go to Catalog
            </a>
        </div>
    </div>
}
else
{
    <form asp-action="Checkout" method="post">
        <div class="row g-4">
            <!-- Left: Shipping Address -->
            <div class="col-lg-7">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-transparent border-bottom">
                        <h5 class="mb-0 fw-bold"><i class="bi bi-geo-alt me-2 text-primary"></i>Shipping Address</h5>
                    </div>
                    <div class="card-body">
                        @if (!Model.Addresses.Any())
                        {
                            <div class="text-center py-4">
                                <i class="bi bi-geo-alt fs-1 text-muted"></i>
                                <p class="text-muted mt-2">No saved addresses. Please add one first.</p>
                                <a class="btn btn-outline-primary rounded-pill" asp-controller="Addresses" asp-action="Create">
                                    <i class="bi bi-plus-circle me-2"></i>Add Address
                                </a>
                            </div>
                        }
                        else
                        {
                            @foreach (var addr in Model.Addresses)
                            {
                                <div class="form-check p-3 rounded-3 border mb-2 @(Model.SelectedAddressId == addr.AddressId ? "border-primary bg-primary bg-opacity-10" : "")">
                                    <input class="form-check-input" type="radio" name="SelectedAddressId" value="@addr.AddressId" id="addr_@addr.AddressId"
                                           @(Model.SelectedAddressId == addr.AddressId ? "checked" : null) />
                                    <label class="form-check-label w-100" for="addr_@addr.AddressId">
                                        <div class="fw-bold">@addr.Street</div>
                                        <div class="text-muted small">@addr.City, @addr.Country @addr.Zip</div>
                                        @if (addr.IsDefault)
                                        {
                                            <span class="badge bg-success bg-opacity-10 text-success mt-1">Default</span>
                                        }
                                    </label>
                                </div>
                            }
                            <a class="btn btn-sm btn-outline-secondary rounded-pill mt-2" asp-controller="Addresses" asp-action="Create">
                                <i class="bi bi-plus me-1"></i>Add New Address
                            </a>
                        }
                    </div>
                </div>
            </div>

            <!-- Right: Order Summary -->
            <div class="col-lg-5">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-transparent border-bottom">
                        <h5 class="mb-0 fw-bold"><i class="bi bi-receipt me-2 text-primary"></i>Order Summary</h5>
                    </div>
                    <div class="card-body p-0">
                        @foreach (var item in Model.Cart.Items)
                        {
                            <div class="d-flex justify-content-between align-items-center p-3 border-bottom">
                                <div>
                                    <div class="fw-bold">@item.Name</div>
                                    <small class="text-muted">Qty: @item.Quantity &times; @item.Price.ToString("C")</small>
                                </div>
                                <div class="fw-semibold">@item.LineTotal.ToString("C")</div>
                            </div>
                        }
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <span class="fs-5 fw-bold">Total</span>
                            <span class="fs-4 fw-bold text-primary">@Model.Cart.Total.ToString("C")</span>
                        </div>
                        <button type="submit" class="btn btn-primary w-100 btn-lg rounded-pill" @(Model.Addresses.Any() ? null : "disabled")>
                            <i class="bi bi-check-circle me-2"></i>Place Order
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </form>
}
