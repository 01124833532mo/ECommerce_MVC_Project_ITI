@model ProductListVm
@{
    ViewData["Title"] = "Products";
    var categories = (IEnumerable<CategoryVm>?)ViewBag.Categories ?? Enumerable.Empty<CategoryVm>();
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h3 class="fw-bold mb-1"><i class="bi bi-box-seam me-2"></i>Products</h3>
        <p class="text-muted mb-0">@Model.TotalCount product(s) total</p>
    </div>
    <a class="btn btn-primary rounded-pill" asp-action="Create">
        <i class="bi bi-plus-circle me-2"></i>New Product
    </a>
</div>

<!-- Filters -->
<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label fw-semibold small text-muted"><i class="bi bi-tag me-1"></i>Category</label>
                <select id="categoryFilter" name="categoryId" class="form-select">
                    <option value="">All Categories</option>
                    @foreach (var category in categories)
                    {
                        var isSelected = Model.CategoryId == category.CategoryId;
                        <option value="@category.CategoryId" selected="@isSelected">@category.Name</option>
                    }
                </select>
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary rounded-pill">
                    <i class="bi bi-funnel me-1"></i>Apply
                </button>
                <a class="btn btn-outline-secondary rounded-pill ms-1" asp-action="Index">Reset</a>
            </div>
        </form>
    </div>
</div>

@if (!Model.Items.Any())
{
    <div class="card border-0 shadow-sm">
        <div class="card-body text-center py-5">
            <i class="bi bi-box-seam display-4 text-muted"></i>
            <p class="text-muted mt-3 fs-5">No products found.</p>
        </div>
    </div>
}
else
{
    <div class="card border-0 shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4">Product</th>
                        <th>SKU</th>
                        <th>Category</th>
                        <th class="text-end">Price</th>
                        <th class="text-end">Stock</th>
                        <th>Status</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var product in Model.Items)
                {
                    <tr>
                        <td class="ps-4">
                            <div class="d-flex align-items-center">
                                <div class="rounded-2 bg-light d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                    <i class="bi bi-image text-muted"></i>
                                </div>
                                <span class="fw-semibold">@product.Name</span>
                            </div>
                        </td>
                        <td><code class="text-muted">@product.SKU</code></td>
                        <td><span class="badge bg-primary bg-opacity-10 text-primary">@product.CategoryName</span></td>
                        <td class="text-end fw-semibold">@product.Price.ToString("C")</td>
                        <td class="text-end">
                            @if (product.StockQuantity <= 5)
                            {
                                <span class="text-danger fw-bold">@product.StockQuantity</span>
                            }
                            else
                            {
                                <span>@product.StockQuantity</span>
                            }
                        </td>
                        <td>
                            @if (product.IsActive)
                            {
                                <span class="badge bg-success bg-opacity-10 text-success rounded-pill"><i class="bi bi-check-circle me-1"></i>Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary bg-opacity-10 text-secondary rounded-pill"><i class="bi bi-x-circle me-1"></i>Inactive</span>
                            }
                        </td>
                        <td class="text-end pe-4">
                            <a class="btn btn-sm btn-outline-primary rounded-pill me-1" asp-action="Edit" asp-route-id="@product.Id">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <form asp-action="Delete" asp-route-id="@product.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-outline-danger rounded-pill" onclick="return confirm('Delete this product?');">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
}
