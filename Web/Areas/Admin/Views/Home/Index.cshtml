@using EcommerceIti.Application.ViewModels
@{
    ViewData["Title"] = "Dashboard";
    var categoryCount = (int)ViewBag.CategoryCount;
    var orderCount = (int)ViewBag.OrderCount;
    var recentOrders = (IList<OrderSummaryVm>)ViewBag.RecentOrders;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h3 class="fw-bold mb-1">Dashboard</h3>
        <p class="text-muted mb-0">Welcome back, Administrator</p>
    </div>
    <span class="text-muted small"><i class="bi bi-calendar3 me-1"></i>@DateTime.Now.ToString("dddd, MMMM dd, yyyy")</span>
</div>

<!-- Stats Cards -->
<div class="row g-4 mb-4">
    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body d-flex align-items-center">
                <div class="rounded-3 p-3 me-3" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                    <i class="bi bi-tags text-white fs-4"></i>
                </div>
                <div>
                    <p class="text-muted small mb-0">Categories</p>
                    <h3 class="fw-bold mb-0">@categoryCount</h3>
                </div>
                <a class="ms-auto text-decoration-none" asp-controller="Categories" asp-action="Index">
                    <i class="bi bi-arrow-right-circle fs-5 text-muted"></i>
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body d-flex align-items-center">
                <div class="rounded-3 p-3 me-3" style="background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);">
                    <i class="bi bi-receipt text-white fs-4"></i>
                </div>
                <div>
                    <p class="text-muted small mb-0">Total Orders</p>
                    <h3 class="fw-bold mb-0">@orderCount</h3>
                </div>
                <a class="ms-auto text-decoration-none" asp-controller="Orders" asp-action="Index">
                    <i class="bi bi-arrow-right-circle fs-5 text-muted"></i>
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body d-flex align-items-center">
                <div class="rounded-3 p-3 me-3" style="background: linear-gradient(135deg, #fc5c7d 0%, #6a82fb 100%);">
                    <i class="bi bi-box-seam text-white fs-4"></i>
                </div>
                <div>
                    <p class="text-muted small mb-0">Products</p>
                    <a class="fw-bold text-decoration-none text-dark" asp-controller="Products" asp-action="Index">Manage</a>
                </div>
                <a class="ms-auto text-decoration-none" asp-controller="Products" asp-action="Index">
                    <i class="bi bi-arrow-right-circle fs-5 text-muted"></i>
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row g-4 mb-4">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <h6 class="fw-bold mb-3"><i class="bi bi-lightning me-2"></i>Quick Actions</h6>
                <div class="d-flex flex-wrap gap-2">
                    <a class="btn btn-outline-primary rounded-pill" asp-controller="Categories" asp-action="Create">
                        <i class="bi bi-plus-circle me-1"></i>New Category
                    </a>
                    <a class="btn btn-outline-success rounded-pill" asp-controller="Products" asp-action="Create">
                        <i class="bi bi-plus-circle me-1"></i>New Product
                    </a>
                    <a class="btn btn-outline-secondary rounded-pill" asp-controller="Orders" asp-action="Index">
                        <i class="bi bi-receipt me-1"></i>View All Orders
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Orders -->
<div class="card border-0 shadow-sm">
    <div class="card-header bg-transparent d-flex justify-content-between align-items-center border-bottom">
        <h5 class="mb-0 fw-bold"><i class="bi bi-clock-history me-2"></i>Recent Orders</h5>
        <a class="btn btn-sm btn-outline-primary rounded-pill" asp-controller="Orders" asp-action="Index">View All</a>
    </div>
    @if (!recentOrders.Any())
    {
        <div class="card-body text-center py-5">
            <i class="bi bi-inbox display-4 text-muted"></i>
            <p class="text-muted mt-3">No orders yet.</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4">Order #</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th class="text-end">Total</th>
                        <th class="text-end pe-4"></th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var order in recentOrders)
                {
                    <tr>
                        <td class="ps-4 fw-bold">@order.OrderNumber</td>
                        <td>
                            <span>@order.OrderDate.ToLocalTime().ToString("MMM dd, yyyy")</span>
                            <br /><small class="text-muted">@order.OrderDate.ToLocalTime().ToString("h:mm tt")</small>
                        </td>
                        <td>
                            @{
                                var badgeClass = order.Status switch
                                {
                                    EcommerceIti.Domain.Entities.OrderStatus.Pending => "bg-warning text-dark",
                                    EcommerceIti.Domain.Entities.OrderStatus.Processing => "bg-info text-dark",
                                    EcommerceIti.Domain.Entities.OrderStatus.Shipped => "bg-primary",
                                    EcommerceIti.Domain.Entities.OrderStatus.Delivered => "bg-success",
                                    EcommerceIti.Domain.Entities.OrderStatus.Cancelled => "bg-danger",
                                    _ => "bg-secondary"
                                };
                            }
                            <span class="badge @badgeClass rounded-pill px-3">@order.Status</span>
                        </td>
                        <td class="text-end fw-bold">@order.TotalAmount.ToString("C")</td>
                        <td class="text-end pe-4">
                            <a class="btn btn-sm btn-outline-primary rounded-pill" asp-controller="Orders" asp-action="Details" asp-route-id="@order.OrderId">
                                <i class="bi bi-eye me-1"></i>View
                            </a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    }
</div>
